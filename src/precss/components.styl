.faq
  margin 0 0 2rem 0
  > li
    display: block
    width: 100%
    margin: 0
    padding: 0
    overflow hidden
    &:before {
      display: none
    }
    & + li
      margin-top: 1rem
    .q
      background-color: rgba(0, 193, 167, 0.3);
      padding 20px 20px 20px 40px
      font-weight bold
      position: relative
      font-size rem(17px)
      &:before, &:after
        transition .5s cubic-bezier(.18,.89,.32,1.28)
        position: absolute
        display: block
        bottom: 0
        top: 0
        left: 10px
        content ""
        background-color: #00c1a7
        margin auto
        font-size rem(30px)
      &:after
        width: 3px
        height: 15px
        left: 16px
      &:before
        width: 15px
        height: 3px
      &:hover
        cursor: pointer
    .a
      margin 1rem 0
      display: none
    &.active
      .q
        &:after
          transform translate3d(0,-70px,0)
