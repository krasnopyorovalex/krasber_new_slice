.btn
  color: #ffffff
  font-size: rem(14px)
  text-transform: uppercase
  background-color: #00c1a7;
  padding 10px 60px 10px 26px
  border-radius 3px
  border: 1px solid #00c1a7;
  text-align: center
  display: inline-block
  position: relative
  transition: all 300ms ease
  &:after {
    content ""
    position: absolute
    right: 40px
    top: 20%
    height 60%
    width 1px
    background-color: #fff
    transition: all 300ms ease
  }
  &:before {
    content ""
    position: absolute;
    right: 1rem
    top: calc(50% - 4px)
    sprite($btn_arrow_right)
  }
  &:hover {
    box-shadow: 0 2px 1px rgba(0,0,0,.09)
    background-color: #009783
  }
  &.white
    display: inline-block
    margin 2.5rem 0 0 0
    background: none
    border: 1px solid #ffffff
    text-transform: uppercase
    padding 14px 64px 12px 26px
    letter-spacing 1px
    &:hover {
      background-color: #00c1a7;
      border: 1px solid #00c1a7;
    }
    &:after {
      top: 0
      height: 100%
    }
  &.black
    display: inline-block
    margin 2.5rem 0 0 0
    background: none
    border: 1px solid #2c2c2e
    color: #2c2c2e
    text-transform: uppercase
    padding 14px 64px 12px 26px
    letter-spacing 1px
    &:hover {
      background-color: #00c1a7;
      border: 1px solid #00c1a7;
      color: #ffffff
      &:after {
        background-color: #ffffff;
      }
      &:before{
        sprite($btn_arrow_right)
      }
    }
    &:after {
      content ""
      position: absolute
      right: 40px
      top: 20%
      height 60%
      width 1px
      background-color: #2c2c2e
    }
    &:before {
      content ""
      position: absolute;
      right: 1rem
      top: calc(50% - 4px)
      sprite($btn_arrow_right_black)
    }
