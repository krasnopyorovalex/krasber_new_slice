.steps_form {
  padding 1rem
  margin 0 0 2rem 0
  border 1px solid #00c1a7
  position: relative
  &:before {
    content ""
    position: absolute
    top: 4px
    bottom: 4px
    left: 4px
    right: 4px
    border 1px solid #d2d2d2
  }
  .col-7 {
    align-self center
    sm-block({
     order: -1
    })
  }
  .error_change {
    position: absolute
    left: 1rem
    right: 1rem
    bottom: 1rem
    background-color: #d2d2d2
    text-align: center
    font-size rem(18px)
    height: 40px
    line-height 40px
    display: none
  }
  &-step {
    display: flex
    align-items center
    flex-wrap wrap
    li {
      padding: 8px 30px 8px 50px
      margin: 0
      display: inline-block
      border: 1px solid #00c1a7
      position: relative
      text-transform: uppercase
      font-size rem(14px)
      md-block({
          display: block
          width: 100%
        })
      .icon {
        vertical-align: middle
        transition: all 300ms ease
        width: 30px
        height: 30px
        fill: #ffffff
        display: none
        opacity 0
        margin 0 .5rem 0 0
      }
      span {
        transition: all 300ms ease
        padding 2px 10px
        text-align: center
        border: 1px solid #00c1a7
        border-radius 50%
        margin 0 .5rem 0 0
        opacity 1
        display: block
      }
      .icon, span {
        position: absolute
        left: 10px
        top: 4px
      }
      &:first-child span {
        padding 2px 12px
      }
      & + li {
        margin 0 0 0 1.5rem
        md-block({
          margin: .5rem 0 0 0
        })
      }
      &:before {
        display: none;
      }
      &.success {
        text-decoration line-through
        background-color: #00c1a7
        span {
          display: none
          opacity 0
        }
        .icon {
          display: inline-block
          opacity: 1;
        }
      }
    }
  }
  fieldset {
    display: none
    padding 1rem 0 0 0
    border-top: 1px solid #d2d2d2
    &.active {
      display: block
    }
    .title {
      font-weight 700
      font-size rem(18px)
      margin .5rem 0 1.5rem 0
    }
    .agree__block {
      label {
        color #2c2c2e
      }
    }
    label {
      display: block
      margin 1rem 0 0 0
    }
    input::placeholder {
            color #00c1a7
          }
    input {
      border: 1px solid #00c1a7
      max-width 380px
      margin .5rem auto 0 auto
      text-align: center
      background: none
      padding 8px 16px
      color: #2c2c2e
    }
    .other {
      margin 2rem 0 0 0
    }
    .previous {
      display: inline-block
      margin 0 1rem 0 0
      padding 10px 26px
      &:after, &:before {
        display: none
      }
      sm-block({
        min-width: 80px
        margin: 0
      })
    }
    .continue {
      display: inline-block
      text-align: left
      margin 1rem 0 0 0
      &:hover {
        cursor: pointer;
      }
      sm-block({
        min-width: 80px
      })
    }
    ul {
      margin 1rem 0 0 0
      padding 0 0 2rem 0
      display: flex
      flex-wrap wrap
      align-items stretch
      justify-content: space-around
      border-bottom: 1px dashed #d2d2d2
      sm-block({
       justify-content: space-between
      })
      li {
        display: inline-block
        position: relative
        text-align: center
        margin 0 .15rem 1rem .2rem
        border: 1px solid #d2d2d2
        transition: all 300ms ease
        box-sizing border-box
        padding .75rem
        sm-block({
         flex-basis: 100%
        })
        &:hover {
          cursor: pointer
          border: 1px solid #00c1a7
        }
        &:before {
          display: none
          transition: all 300ms ease
        }
        &:after {
          opacity 0
          content ''
          sprite($check)
          position: absolute
          top: 10px
          left: 10px
          transition: all 300ms ease
        }
        &.active {
          &:before {
            background-color: rgba(210, 210, 210, .2)
            background-image: none
            background-position center center
            width: 100%
            height: 100%
            border-radius 0
            top: 0
            right: 0
            bottom: 0
            left: 0
            display: block
          }
          &:after {
            opacity 1
          }
        }
        svg {
          width: 50px
          height: 50px
          fill: #00c1a7
          md-block({
           width: 40px
           height: 40px
          })
        }
        span {
          display: block
        }
      }
    }
    &.multiple {
      ul {
        justify-content: space-between
      }
    }
    .contacts {
      .agree__block {
        label {
          margin 0 1rem
          box-sizing border-box
          &:before {
            border: 1px solid #2c2c2e
            border-radius 50%
          }
        }
        a {
          color: #00c1a7
        }
      }
      .submit__block {
        margin: 1rem 0 0 0
        button {
          display: block
          max-width 220px
          border 1px solid #00c1a7
          background-color: #00c1a7
          &:hover {
            background: none
            color inherit
          }
        }
      }
    }
  }
}
.right {
  text-align: right
  sm-block({
     text-align: center
    })
}
