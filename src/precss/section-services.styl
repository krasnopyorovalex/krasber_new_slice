.services
  padding 0 0 2rem 0
  md-block({
    padding: 0 .5rem
  })
  &__list
    row-flex()
    justify-content center
    &-item
      col()
      size(4)
      size-md(12)
      box-shadow: 0 4px 6px rgba(0,0,0,.1)
      border: 1px solid #f1f1f1;
      border-radius 5px
      position: relative
      margin-bottom: 1rem
      md-block({
        padding: 1.5rem 1rem
      })
      &:first-child .body
        md-block({
          display: inline-block
        })
      .name
        color: #2c2c2e;
        font-family: "Gilroy ExtraBold"
        background-color: rgba(0, 193, 167, 0.33);
        padding 1.5rem 2rem
        font-size: rem(20px)
        display: inline-block
        text-align: center
        width: 100%
        box-sizing border-box
        md-block({
          font-size: rem(16px)
        })
      .body
        display: inline-block
        width: 100%
        padding 0 2rem 1rem 2rem
        margin .5rem 0 2rem 0
        box-sizing border-box
        md-block({
          padding: 0 1rem 1rem 1rem
        })
        .desc
          font-size: rem(14px)
          font-weight: 400
          display: inline-block
          width: 100%
          margin 1rem 0 1.5rem 0
        ul
          md-block({
            text-align: center
          })
          li
            position: relative
            transition: all 300ms ease
            border-radius: 8px
            border: 1px solid #00c1a7;
            md-block({
              display: inline-block
              padding-right: 2rem
            })
            sm-block({
              display: block
              padding-right: 0
            })
            & + li
              margin-top 15px
              md-block({
                margin-left: 15px
              })
              sm-block({
                margin-left: 0
              })
            &:hover
              box-shadow: 0 1px 3px rgba(0,0,0,.1)
              border: 1px solid #e8ecef
            &:after
              position: absolute
              content ""
              sprite($service_arrow)
              right: 12px
              top: calc(50% - 6px)
            a
              box-sizing border-box
              display: block
              width: 100%
              padding 8px 16px
              color: #2c2c2e
              font-size: rem(14px)
      .btn__more
        position: absolute
        bottom: -24px
        right: 2rem
        md-block({
          display: none
        })
        .btn
          position: relative;
