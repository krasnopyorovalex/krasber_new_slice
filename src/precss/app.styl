figure
  margin: 0
  padding: 0
.center
  text-align: center
section
  position: relative
  padding 2rem 0
  margin 2rem 0
  md-block({
    padding: 0 .5rem
    margin: 1rem 0
  })
.text__right
  text-align: right
main, .main__text
  margin 2rem 0
  md-block({
    padding: 0 .5rem
    margin: .5rem 0
  })
  .as__h1, .as__h2, .as__h3, .as__h4, .as__h5, h1, h2, h3, h4, h5 {
    margin-top 2.5rem
    md-block({
      margin-top: 1.5rem
    })
  }
  p
    font-size rem(17px)
    line-height: 26px
  a
    color: #00c1a7
    text-decoration: underline
  ol, ul
    margin 0 0 15px 0
    padding: 0
    li
      font-size rem(17px)
      line-height: 26px
      padding 0 0 0 .5rem
      margin 0 0 .5rem 1rem
      position: relative
  ul
    li
      &:before
        content ""
        position: absolute;
        width: 5px
        height: 5px
        left: -.2rem
        top: 12px
        background-color: #00c1a7
        border-radius 50%
  .order__service-form {
    margin-bottom 3rem
  }
button:focus,button:active
  outline none
  border 0
.hidden__md
  md-block({
    display: none
  })
.list__items
